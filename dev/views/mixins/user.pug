mixin user(userImageUrl, userName, userState, extension=".jpg")
    header.card__header.user
        .user__left
           img( class=`user__img img__${userImageUrl}` src=`../public/assets/images/image-${userImageUrl}${extension}`, alt=`${userName} Profile Picture` )
        .user__right 
            h3.user__name= userName 
            p.user__state= userState